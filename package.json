{
  "name": "mailtu",
  "version": "1.0.0",
  "description": "Create mailto: links programmatically",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "author": "Alberto Rico",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alrico88/mailtu"
  },
  "sideEffects": false,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitest/coverage-v8": "^0.34.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "husky": "^7.0.4",
    "tslib": "^2.6.1",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  },
  "keywords": [
    "mailto"
  ],
  "scripts": {
    "dev": "pnpm run build -- --watch src",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "eslint --cache --fix --ignore-path .gitignore --ext .ts,.js src",
    "prepublish": "pnpm run build",
    "coveralls": "vitest run --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint"
    }
  }
}
